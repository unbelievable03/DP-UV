#include<bits/stdc++.h>
using namespace std;
#define         int                 long long
#define         pb                  push_back
#define         all(x)              (x).begin(),(x).end()
#define         sz(x)               (int)((x).size())
#define         FOR(i,a,b)          for(int i=a;i<b;i++)
#define         vi                  vector<int>
#define         mod                 100
#define         endl                "\n"
int mat( int A[][mod],int n, int m)
{
    int dp[n][m];
    memset(dp,0,sizeof(dp));
    for(int i=m-1;i>=0;i--){
        for(int j=0;j<n;j++){
            int r,ru,rd;
            if(i==m-1){
                r=0;
            }
            else{
                r=dp[j][i+1];
            }
            if(i==m-1 || j==0){
                ru=0;
            }
            else{
                ru= dp[j-1][i+1];
            }
            if(i==m-1 || j== n-1){
                rd=0;
            }
            else{
                rd= dp[j+1][i+1];
            }
            dp[j][i]= A[j][i]+ max( r,max(ru,rd));
        }
    }
    int res= dp[0][0];
    for(int i=1;i<n;i++){
        res= max( res,dp[i][0]);
    }
    return res;
}
void solve()
{
    int A[mod][mod];
    int n,m;
    cin>>n>>m;
    FOR(i,0,n)
       FOR(j,0,m)
            cin>>A[i][j];
    cout<<mat(A,n,m)<<endl;
}
signed main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(0);cout.tie(0);
    int T=1;
    //cin>>T;
    while(T--){solve();}
    return 0;
}
